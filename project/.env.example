# Django secret key (generate one and keep it private)
DJANGO_SECRET_KEY=change-me

# In dev, use 1; in prod (Render), use 0
DJANGO_DEBUG=1

# Comma-separated hosts
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Local database URL example (Render injects DATABASE_URL automatically)
DATABASE_URL=postgres://postgres:postgres@localhost:5432/blockbusted

# RapidAPI config
RAPIDAPI_KEY=your-rapidapi-key
RAPIDAPI_MOVIE_HOST=online-movie-database.p.rapidapi.com

# Optional CORS for local frontend dev
CORS_ALLOWED_ORIGINS=http://localhost:3000
